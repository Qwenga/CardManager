<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_gravity="center_horizontal">




        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider0"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:id="@+id/clubmatas"
                android:src="@drawable/matas"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:layout_marginLeft="1dp"

               android:layout_below="@id/divider0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Club Matas"
                android:id="@+id/clubmatastext"
                android:layout_below="@+id/divider0"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/clubmatas"
                android:layout_above="@+id/divider1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/clubmatas"
                android:id="@+id/divider1"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:id="@+id/magasinkort"
                android:src="@drawable/magasinkort"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:layout_marginLeft="1dp"

                android:layout_below="@+id/divider1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Magasin Kort"
                android:id="@+id/magasinkorttext"
                android:layout_below="@+id/divider1"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/magasinkort"
                android:layout_above="@+id/divider2" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/magasinkort"
                android:id="@+id/divider2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:id="@+id/rodeokort"
                android:src="@drawable/rodeo"
                android:scaleType="fitCenter"
                android:background="#FFFFFF"
                android:layout_marginLeft="1dp"

                android:layout_below="@+id/divider2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Rodeo"
                android:id="@+id/rodeokorttext"
                android:layout_below="@+id/divider2"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/clubmatas"
                android:layout_above="@+id/divider3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/rodeokort"
                android:id="@+id/divider3"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>




        </RelativeLayout>
    </ScrollView>
</LinearLayout>